name = 'ncurses'
version = '5.9'
gccsver = '447'

homepage = 'http://www.gnu.org/software/ncurses/'
description = """ The Ncurses (new curses) library is a free software
    emulation of curses in System V Release 4.0, and more. It uses
    Terminfo format, supports pads and color and multiple highlights
    and forms characters and function-key mapping, and has all the other
    SYSV-curses enhancements over BSD Curses."""

toolchain = {'name': 'xlcxlf', 'version': '13.1.0.0.%s' % gccsver}
toolchainopts = {'optarch': True, 'pic': True}

preconfigopts = 'sed -e "s/ -shared / -qmkshrobj /g" -i configure && sed -e \'s/extern "C" void exit(int);//\' -i c++/etip.h.in && '

source_urls = [GNU_SOURCE]
sources = [SOURCE_TAR_GZ]

moduleclass = 'devel'
