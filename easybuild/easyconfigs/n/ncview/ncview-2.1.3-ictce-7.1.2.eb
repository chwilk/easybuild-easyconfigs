name = 'ncview'
version = '2.1.3'

homepage = 'http://meteora.ucsd.edu/~pierce/ncview_home_page.html'
description = """Ncview is a visual browser for netCDF format files."""

toolchain = {'name': 'ictce', 'version': '7.1.2'}
toolchainopts = {'usempi': True}

source_urls = ['ftp://cirrus.ucsd.edu/pub/ncview/']
sources = [SOURCE_TAR_GZ]

dependencies = [
    ('netCDF', '4.2.1.1'),
    ('HDF5', '1.8.12', '-gpfs'),
    ('UDUNITS', '2.1.24'),
]

sanity_check_paths = {
    'files': ['bin/ncview'],
    'dirs': [],
}

configopts = '-with-udunits2_libdir=$EBROOTUDUNITS/lib'

moduleclass = 'vis'
