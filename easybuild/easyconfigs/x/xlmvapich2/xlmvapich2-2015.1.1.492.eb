easyblock = "Toolchain"

name = 'xlmvapich2'
gccsver = '492'
version = '2015.1.1.%s' % gccsver

homepage = 'http://www.mpich.org'
description = """IBM XL compilers with MVAPICH2 for MPI support.""" 

toolchain = {'name': 'dummy', 'version': 'dummy'}

compname = 'xlcxlf'
compver = '13.1.0.0.%s' % gccsver
comp = (compname, compver)

mpilib = 'MVAPICH2'
mpiver = '1.9'

# compiler toolchain depencies
dependencies = [
    comp,
    (mpilib, mpiver, '', comp),
]

moduleclass = 'toolchain'
